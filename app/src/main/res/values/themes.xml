<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Stopwatch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:colorBackground">?attr/SWBackgroundColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="SWBackgroundColor">@color/extreme_light_grey</item>
        <item name="SWColorOnBackgroundMuted">@color/mildly_transparent_light_grey</item>
        <item name="SWColorOnBackgroundMutedMin">@color/transparent_light_grey</item>
        <item name="SWColorOnBackground">@color/black</item>
        <item name="SWColorSurface">@color/light_grey</item>
        <item name="SWColorOnSurface">@color/heavy_light_grey</item>
        <item name="SWColorPrimary">@color/toned_down_purple</item>
        <item name="SWColorOnPrimary">@color/white</item>
        <item name="SWColorError">@color/red</item>
    </style>

    <style name="Theme.Stopwatch" parent="Base.Theme.Stopwatch" />
</resources>